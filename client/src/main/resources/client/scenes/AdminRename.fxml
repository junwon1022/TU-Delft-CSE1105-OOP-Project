<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: #CAF0F8;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.AdminRenameCtrl">
   <children>
      <TextField fx:id="titleField" layoutX="30.0" layoutY="70.0" onKeyPressed="#handleKeyPressed" prefHeight="31.0" prefWidth="240.0" promptText="Enter a new title . . ." stylesheets="@../../styles.css">
         <font>
            <Font name="Corbel" size="13.0" />
         </font>
      </TextField>
      <Button fx:id="renameTitle" layoutX="214.0" layoutY="155.0" mnemonicParsing="false" onAction="#rename" prefHeight="25.0" prefWidth="67.0" styleClass="normal-button" stylesheets="@../../styles.css" text="Rename">
         <font>
            <Font name="Corbel" size="13.0" />
         </font></Button>
      <Label fx:id="nullTitle" alignment="CENTER" layoutX="32.0" layoutY="117.0" prefHeight="22.0" prefWidth="240.0" textFill="#8f2e30">
         <font>
            <Font name="Corbel" size="12.0" />
         </font>
      </Label>
      <Button fx:id="cancel" cancelButton="true" layoutX="142.0" layoutY="155.0" mnemonicParsing="false" onAction="#cancel" prefHeight="25.0" prefWidth="59.0" styleClass="red-button" stylesheets="@../../styles.css" text="Cancel" textFill="WHITE">
         <font>
            <Font name="Corbel" size="13.0" />
         </font>
      </Button>
      <Label layoutX="84.0" layoutY="31.0" text="Rename the board" textAlignment="CENTER" textFill="#231f20">
         <font>
            <Font name="Corbel Bold" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
