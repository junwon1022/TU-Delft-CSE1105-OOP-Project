<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="root" blendMode="DARKEN" prefHeight="37.0" prefWidth="318.0" spacing="15.0" style="-fx-background-color: #4AACD6; -fx-background-radius: 8;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="title" prefHeight="23.0" prefWidth="79.0" textFill="WHITE">
         <font>
            <Font name="Corbel" size="15.0" />
         </font>
      </Label>
      <ColorPicker fx:id="background" onAction="#setBackground" prefHeight="25.0" prefWidth="41.0" style="-fx-background-color: rgb(0,0,0,0);" />
      <ColorPicker fx:id="font" onAction="#setFont" prefHeight="25.0" prefWidth="41.0" style="-fx-background-color: rgb(0,0,0,0);" />
      <Button fx:id="setDefault" mnemonicParsing="false" onAction="#setDefault" prefHeight="22.0" prefWidth="67.0" style="-fx-background-color: #FFFFFF;" text="set default">
         <font>
            <Font name="Corbel Bold" size="11.0" />
         </font>
      </Button>
      <Button fx:id="remove" mnemonicParsing="false" onAction="#removePalette" prefHeight="20.0" prefWidth="17.0" style="-fx-padding: 2; -fx-background-color: rgb(0,0,0,0);" text="❌" textFill="#f81515">
         <opaqueInsets>
            <Insets />
         </opaqueInsets></Button>
   </children>
   <padding>
      <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
   </padding>
</HBox>
