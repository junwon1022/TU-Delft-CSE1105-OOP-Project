<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<HBox fx:id="root" alignment="CENTER" maxWidth="1.7976931348623157E308" spacing="8.0" style="-fx-background-radius: 10; -fx-border-radius: 10;" stylesheets="@../../palettes.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <CheckBox id="check-box" fx:id="checkBox" mnemonicParsing="false" prefHeight="22.0" prefWidth="22.0" stylesheets="@../../styles.css" />
      <Label fx:id="checklistDescription" maxWidth="1.7976931348623157E308" stylesheets="@../../styles.css" textFill="#2c667b" HBox.hgrow="ALWAYS">
         <font>
            <Font name="Corbel" size="14.0" />
         </font>
      </Label>
      <AnchorPane>
         <children>
            <Button fx:id="rename" layoutY="3.0" mnemonicParsing="false" onAction="#renameChecklist" prefHeight="17.0" prefWidth="22.0" styleClass="rename" stylesheets="@../../styles.css" textFill="WHITE">
               <font>
                  <Font size="1.0" />
               </font>
            </Button>
            <Button id="delete-list" fx:id="removeChecklist" layoutX="26.0" layoutY="2.0" mnemonicParsing="false" onAction="#removeChecklist" prefHeight="17.0" prefWidth="17.0" stylesheets="@../../styles.css" text="❌" textFill="#231f20">
               <font>
                  <Font name="Corbel Bold" size="16.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
   <padding>
      <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
   </padding>
   <styleClass>
      <String fx:value="checklist-item" />
      <String fx:value="list-cell" />
   </styleClass>
</HBox>
