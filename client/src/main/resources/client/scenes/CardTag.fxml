                <Button id="delete-list" fx:id="removeTagFromCard" layoutX="-1.0" layoutY="5.0" mnemonicParsing="false" onAction="#removeTagFromCard" prefHeight="14.0" prefWidth="13.0" stylesheets="@../../styles.css" text="❌" textFill="#231f20">
                    <font>
                        <Font name="Corbel Bold" size="13.0" />
                    </font>
                    <effect>
                        <ColorAdjust brightness="-0.42" />
                    </effect>
                </Button>
         </children>
        </AnchorPane>
    </children>
    <padding>
        <Insets left="10.0" right="10.0" />
    </padding>
</HBox>
