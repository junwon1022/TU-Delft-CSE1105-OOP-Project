<HBox fx:id="root" alignment="CENTER" maxWidth="1.7976931348623157E308" onMouseClicked="#addToCard" prefHeight="27.0" prefWidth="164.0" spacing="5.0" styleClass="tag-hbox" stylesheets="@../../styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
